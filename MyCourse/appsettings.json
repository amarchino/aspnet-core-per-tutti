{
  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Smtp": {
    "Host": "guerrillamail.com",
    "Port": 25,
    "Security": "None",
    "Sender": "MyCourse <noreply@mycourse.com>",
    "Username": "",
    "Password": ""
  },
  "Courses": {
    "PerPage": 10,
    "CacheDuration": 60,
    "InHome": 3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": ["Id", "Title", "Rating", "CurrentPrice"]
    },
    "Image": {
      "MaxWidth": 300,
      "MaxHeight": 300
    }
  },
  "MemoryCache": {
    "SizeLimit": 1000
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": [ "page" ]
    }
  },
  "ReCaptcha": {
    "SiteKey": "",
    "SecretKey": "",
    "Version": "v2"
  }
}
