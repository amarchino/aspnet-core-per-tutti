@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@if(signInManager.IsSignedIn(User))
{
  ApplicationUser applicationUser = await userManager.GetUserAsync(User);

  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">Ciao @applicationUser.FullName!</a>
    </li>
    <li class="nav-item active">
      <form method="POST" asp-page="/Account/Logout" asp-area="Identity">
        <button type="submit" class="btn btn-link text-white" asp-area="Identity" asp-page="/Account/Logout">Esci</button>
      </form>
    </li>
  </ul>
}
else
{
  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
    </li>
    <li class="nav-item active">
      <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Accedi</a>
    </li>
  </ul>
}
